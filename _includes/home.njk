<!doctype html>
<html lang="en-GB">
<head>
  <title>{{ title if title else metadata.title }}</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/index.css" rel="stylesheet">
</head>

<body>
  <div class="app-layout">
    {% include "partials/header.njk" %}

    <div class="app-layout__wrapper">
      <div class="app-layout__content">
        <div class="page">
          <main class="page__main">
            <article>
              <h1 class="page__title">
                {{ title }}
              </h1>

              {{ content | safe }}
            </article>
          </main>
        </div>
      </div>

      <input type="checkbox" name="navigation" id="navigation" class="visually-hidden" />

      <div class="app-layout__sidebar">
        <div class="app-layout__sidebar-inner">
          {% include "partials/navigation.njk" %}
          {% include "partials/controls.njk" %}
        </div>
      </div>
    </div>
    </div>
  </div>
</body>
</html>
