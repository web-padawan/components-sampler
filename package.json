{
  "name": "playground",
  "private": true,
  "type": "module",
  "author": {
    "name": "Serhii Kulykov",
    "email": "iamkulykov@gmail.com"
  },
  "license": "MIT",
  "description": "Playground for Vaadin web components",
  "scripts": {
    "build": "cross-env NODE_ENV=production npm-run-all clean -p build:*",
    "build:11ty": "eleventy --quiet",
    "build:rollup": "rollup -c",
    "clean": "rimraf dist",
    "dev": "npm-run-all clean build:* -p dev:*",
    "dev:11ty": "eleventy --serve --quiet",
    "dev:rollup": "rollup -c -w"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@vaadin/dialog": "25.0.0-beta3",
    "@vaadin/popover": "25.0.0-beta3",
    "@vaadin/tooltip": "25.0.0-beta3",
    "cross-env": "^10.0.0",
    "custom-elements-manifest": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "rollup": "^4.46.2"
  }
}
